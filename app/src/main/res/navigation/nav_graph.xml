<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.bojanglesapp.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_createAccountFragment"
            app:destination="@id/createAccountFragment" />
        <action
            android:id="@+id/action_loginFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
    </fragment>
    <fragment
        android:id="@+id/createAccountFragment"
        android:name="com.example.bojanglesapp.CreateAccountFragment"
        android:label="fragment_create_account"
        tools:layout="@layout/fragment_create_account" />
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.bojanglesapp.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/action_menuFragment_to_viewAccountFragment"
            app:destination="@id/viewAccountFragment" />
        <action
            android:id="@+id/action_menuFragment_to_menuItemFragment"
            app:destination="@id/menuItemFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewAccountFragment"
        android:name="com.example.bojanglesapp.ViewAccountFragment"
        android:label="fragment_view_account"
        tools:layout="@layout/fragment_view_account" />
    <fragment
        android:id="@+id/menuItemFragment"
        android:name="com.example.bojanglesapp.MenuItemFragment"
        android:label="fragment_menu_item"
        tools:layout="@layout/fragment_menu_item" />
</navigation>